<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/background_darktheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/background_display">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/display_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="V\nDC"
                    android:gravity="center"
                    android:typeface="serif"
                    android:textColor="@color/color_text_display"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingRight="8dp"/>

                <TextView
                    android:id="@+id/display_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4.763"
                    android:gravity="right|center"
                    android:typeface="monospace"
                    android:textAppearance="@style/DigitalFont"
                    android:textColor="@color/color_text_display"
                    android:textSize="40sp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/display_change_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/repeat_48"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="units"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>