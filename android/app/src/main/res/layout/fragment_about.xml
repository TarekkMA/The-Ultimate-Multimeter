<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.tarekkma.avometerclient.fragments.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/description"
                android:textSize="15dp" />

            <TextView
                android:paddingTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Developers"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:adjustViewBounds="false"
                        android:src="@drawable/schrodinger_test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Software"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="طارق محمد عبدالله"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01013658016"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/tesla_test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Hardware"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حسام حسن حروب"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01008659599"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:paddingTop="18dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسام مصطفي محمد"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محمود صلاح أحمدي"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جهاد مصطفي عثمان النحراوي"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسام السد حسين طه"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسن نبيل حسن محمد"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسن أشرف حسن علي"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسن فرغل علي أحمد"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسن محمد حسن موسي"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حسين محمد حسين عبدالله"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="4dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
